@model IEnumerable<Lab2.ServiceType>

<p>
    @Html.ActionLink("Add New ServiceType", "AddServiceType")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        @Html.HiddenFor(model => item.Id)
<tr>
    <th>
        @Html.DisplayFor(modelItem => item.ServiceName)
    </th>
   
    <td>
        @Html.ActionLink("Edit", "EditServiceType", new { id = item.Id }) |
        @Html.ActionLink("Delete", "DeleteServiceType", new { id = item.Id }, new { onclick = "return confirm('Are sure wants to delete?');" })
    </td>
</tr>
    }

</table> 