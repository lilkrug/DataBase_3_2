@model Lab2.Order



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Update Order</h4>
    <hr />
    <div>
        @Html.ActionLink("Back to Order List", "GetAllOrders")
